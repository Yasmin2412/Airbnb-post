<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing)   %>;
</script>

<style>
  .starability-slot {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 10px;
  }
  
  .starability-slot input[type="radio"] {
    display: none;
  }
  
  .starability-slot label {
    cursor: pointer;
    padding: 0 5px;
  }
  
  /* Media query for small screens like phones */
  @media only screen and (max-width: 767px) {
    .starability-slot label {
      font-size: 12px; /* Adjust font size for smaller screens */
      padding: 0 2px; /* Adjust padding for smaller screens */
    }
  }
  #map {
    height: 400px; /* Set a default height for the map container */
    width: 100%; /* Make the map container fill the parent element */
  }
  </style>

<div class="row mt-3">
    <div class="col-8 card col-12 col-md-5 ms-md-3 mb-3 border border-white">
        <h3>Listings Details</h3>
        <div class="card col-6 show-card listing-card card col-12 col-md-5 ms-md-3 mb-3">
            <img src="<%= listing.image.url %>" class="card-img-top show-img img-fluid" alt="listing_img">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br> </p>
                    <p><b>Owned By:-</b><i><%= listing.owner.username %></i></p>
                   <p><%= listing.description %></p> 
                    &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
                    <%= listing.location %><br>
                    <%= listing.country %><br>
                </p>
            </div>
        </div>
        <br>
    </div>
</div>

<% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark m-3 edit-btn mb-5">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark mb-5 m-3">Delete</button>
      </form>
  </div>
  <% } %>

<div class="col-8 mb-3 m-3">

  <% if(currUser) { %>
  <h4>Leave a Review</h4>

  <form action="/listings/<%= listing.id %>/reviews" method="POST" 
    novalidate class="needs-validation">
    <!-- <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
    </div> -->
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
    <fieldset class="starability-slot">
      <input type="radio" id="no-rate" class="input-no-rate" 
             name="review[rating]" value="1" checked aria-label="No rating." />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
  </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
      <div class="invalid-feedback">Please Enter Review!</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <% }%>
  <br>
  <% if(listing.reviews.length > 0)  { %>
    <hr>
<div class="row">
  <p><b>All Reviews</b></p>
<% for(review of listing.reviews) { %> 
  <div class="card col-12 col-md-5 ms-md-3 mb-3">
    <div class="card-body px-0">
      <h5  class="card-title"><%= review.author.username %></h5>
      <p class="starability-result card-text" 
                data-rating="<%=review.rating%>">
            </p>
      <p class="card-text"><%= review.comment %></p>
      
    </div>
    <form class="mb-3" method="POST"
    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
      <button class="btn btn-sm btn-dark">Delete</button>
    </form>
  </div>
  <% } %>
</div>
 <% } %>
</div>

<div class="col-12 col-md-5 ms-md-3 mb-3">
  <hr>
  <h3>Where youâ€™ll be</h3>
  <div id="map">
  </div>
  </div>
</div>

<script src="/css/js/map.js"></script>